<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <com.jiang.jroundview.JrvTextView
            android:id="@+id/vJrvTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:padding="20dp"
            android:text="JrvTextView"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:jrv_backgroundColor="#00ff00"
            app:jrv_borderColor="@color/white"
            app:jrv_borderWidth="3dp"
            app:jrv_isRadiusAdjustBounds="true"
            app:jrv_radius="20dp"
            app:jrv_gradientOrientation="RIGHT_LEFT" />

    </LinearLayout>
</LinearLayout>